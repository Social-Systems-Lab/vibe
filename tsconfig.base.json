{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "baseUrl": ".",
        "paths": {
            "vibe-cloud-api": ["./apps/vibe-cloud-api/dist/index.d.ts"],
            "vibe-sdk": ["./packages/vibe-sdk/dist/index.d.ts"],
            "vibe-react": ["./packages/vibe-react/dist/index.d.ts"]
        },
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "exclude": ["node_modules", "dist"]
}
