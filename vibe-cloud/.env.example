# Server Configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=development

# TURN Server Configuration 
TURN_PORT=3478
TURN_PORT_TLS=5349
TURN_REALM=vibe.example.com
TURN_AUTH_SECRET=your-secret-key-here
COTURN_HOST=coturn  # Docker service name in production, use 'localhost' for local dev

# Signaling Server Configuration
SIGNAL_ROOM_TIMEOUT=3600000  # 1 hour in milliseconds
MAX_CONNECTIONS_PER_IP=50

# CouchDB
COUCHDB_HOST=couchdb
COUCHDB_ADMIN_USER=admin
COUCHDB_ADMIN_PASSWORD=password
COUCHDB_SECRET=couch-db-secret

# Logging
LOG_LEVEL=info