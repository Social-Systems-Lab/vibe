{
    "private": true,
    "name": "vibe",
    "workspaces": [
        "apps/*",
        "packages/*",
        "infra"
    ],
    "scripts": {
        "dev:api": "bun run --watch --env-file=apps/vibe-cloud-api/.env apps/vibe-cloud-api/src/index.ts",
        "dev:web": "cd apps/vibe-web && bun run dev",
        "dev:test-app": "cd apps/test-app && bun run dev",
        "dev": "concurrently \"bun run dev:api\" \"bun run dev:web\" \"bun run dev:test-app\""
    },
    "trustedDependencies": [
        "waku",
        "@swc/core",
        "@tailwindcss/oxide",
        "esbuild"
    ],
    "dependencies": {
        "undici": "^7.10.0"
    },
    "devDependencies": {
        "concurrently": "^9.2.0"
    }
}
