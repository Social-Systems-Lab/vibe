{
    "private": true,
    "name": "vibe",
    "workspaces": [
        "apps/*",
        "packages/*",
        "infra"
    ],
    "scripts": {
        "dev:api": "cd apps/vibe-cloud-api && bun run dev",
        "dev:web": "cd apps/vibe-web && bun run dev",
        "dev:test-app": "cd apps/test-app && bun run dev",
        "dev:sdk": "cd packages/vibe-sdk && bun run dev",
        "dev:react": "cd packages/vibe-react && bun run dev",
        "dev": "concurrently \"bun run dev:api\" \"bun run dev:web\" \"bun run dev:test-app\" \"bun run dev:sdk\" \"bun run dev:react\"",
        "build": "bun run ./build.ts"
    },
    "trustedDependencies": [
        "waku",
        "@swc/core",
        "@tailwindcss/oxide",
        "esbuild"
    ],
    "dependencies": {
        "undici": "^7.10.0"
    },
    "devDependencies": {
        "@types/varint": "^6.0.0",
        "concurrently": "^9.2.0"
    }
}
