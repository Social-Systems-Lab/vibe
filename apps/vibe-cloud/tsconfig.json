// apps/vibe-cloud/tsconfig.json
{
    "compilerOptions": {
        // Environment setup & latest features
        "lib": ["ESNext", "DOM"], // Keep DOM for console, TextEncoder etc.
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "jsx": "react-jsx", // Keep if needed
        "allowJs": true,

        // Bundler mode
        "moduleResolution": "bundler", // Or "NodeNext"
        // "allowImportingTsExtensions": true, // REMOVE THIS LINE
        "verbatimModuleSyntax": true,
        // "noEmit": false, // Ensure this is false or absent

        // Output Configuration
        "outDir": "./dist",
        "rootDir": ".", // Adjust if source is in ./src
        "declaration": true,
        "sourceMap": true,
        "types": ["node"], // Explicitly include node types

        // Best practices
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,

        // Stricter flags
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noPropertyAccessFromIndexSignature": false,

        // Monorepo Workspace Setup
        "baseUrl": ".",
        "composite": true, // Keep for monorepo structure
        "declarationMap": true
    },
    "references": [
        // Add project reference
        { "path": "../../packages/shared-types" }
    ],
    "include": ["index.ts", "**/*.ts"], // Adjust if using src/
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
