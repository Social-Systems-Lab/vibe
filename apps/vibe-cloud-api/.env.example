# --- CouchDB ---
COUCHDB_URL=http://localhost:5984
COUCHDB_USER=admin
COUCHDB_PASSWORD=password

# --- Auth ---
JWT_SECRET=your-secret-key
INSTANCE_ID_SECRET=your-instance-id-secret
ENCRYPTION_MASTER_KEY=your-64-character-hex-secret-key
CORS_ORIGIN=http://localhost:3000
PORT=5050

# --- Email ---
PUBLIC_UI_URL=http://localhost:4000
SMTP_HOST=smtp.tem.scaleway.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Vibe Cloud <no-reply@vibecloud.se>"

# --- Storage ---
