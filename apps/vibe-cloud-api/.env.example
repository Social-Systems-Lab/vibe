# --- MinIO ---
MINIO_ENDPOINT=http://localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# --- Scaleway ---
SCALEWAY_REGION=fr-par
