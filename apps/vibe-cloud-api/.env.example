# --- CouchDB ---
COUCHDB_URL=http://localhost:5984
COUCHDB_USER=admin
COUCHDB_PASSWORD=password

# --- Auth ---
JWT_SECRET=your-secret-key
INSTANCE_ID_SECRET=your-instance-id-secret
ENCRYPTION_MASTER_KEY=your-64-character-hex-secret-key
CORS_ORIGIN=http://localhost:3000
PORT=5050

# --- Email ---
PUBLIC_UI_URL=http://localhost:4000
SMTP_HOST=smtp.tem.scaleway.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Vibe Cloud <no-reply@vibecloud.se>"

# --- Storage ---
# STORAGE_PROVIDER can be 'minio' or 'scaleway'
STORAGE_PROVIDER=minio
STORAGE_BUCKET_NAME=vibe-cloud

# --- MinIO ---
MINIO_ENDPOINT=http://localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# --- Scaleway ---
SCALEWAY_REGION=fr-par
SCALEWAY_ENDPOINT=s3.fr-par.scw.cloud
SCALEWAY_ACCESS_KEY=
SCALEWAY_SECRET_KEY=

# --- Streaming & Presign TTL / Caching Policy ---
# Default TTL for presigned GET URLs (seconds)
PRESIGN_DEFAULT_TTL_SECONDS=300
# Maximum TTL allowed for presigned GET URLs (seconds)
PRESIGN_MAX_TTL_SECONDS=3600
# Owner-friendly TTL for presigned GET when requester is the owner (seconds)
PRESIGN_OWNER_TTL_SECONDS=86400
# Force owner to use the default TTL (useful for testing)
PRESIGN_FORCE_TTL_FOR_OWNER=false
# Cache-Control max-age for private assets served via /storage/stream (seconds)
STREAM_PRIVATE_MAX_AGE_SECONDS=3600
# Cache-Control max-age for public assets served via /storage/stream (seconds)
STREAM_PUBLIC_MAX_AGE_SECONDS=86400
