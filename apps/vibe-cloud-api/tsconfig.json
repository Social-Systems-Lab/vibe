{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "composite": true,
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["src", "../../types"],
    "exclude": ["node_modules", "dist"]
}
