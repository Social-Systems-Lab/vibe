{
    "compilerOptions": {
        "jsx": "react-jsx",
        "allowJs": true,

        // Bundler mode
        "moduleResolution": "bundler",
        "module": "preserve",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,

        // Target modern browsers/JS engines
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx"]
}
