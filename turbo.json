{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["tsconfig.base.json"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
        },
        "lint": {
            "outputs": []
        },
        "test": {
            "dependsOn": ["build"],
            "outputs": ["coverage/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}
