{
    "name": "vibe-react",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build:js": "bun build ./src/index.tsx --outdir ./dist --external react --external react-dom --external react/jsx-runtime",
        "build:types": "tsc --emitDeclarationOnly",
        "postbuild": "bun run ./postbuild.ts",
        "build": "bun run build:js && bun run build:types && bun run postbuild",
        "dev": "concurrently \"bun run build:js --watch\" \"bun run build:types --watch\""
    },
    "bun": {
        "banner": {
            "js": "\"use client\";"
        }
    },
    "dependencies": {
        "vibe-sdk": "workspace:*"
    },
    "peerDependencies": {
        "react": "19.1.0",
        "react-dom": "19.1.0"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "typescript": "5.8.3",
        "concurrently": "^8.2.2"
    }
}
