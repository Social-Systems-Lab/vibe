{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        /* Project References Settings */
        "composite": true, // Enable project references
        "declaration": true, // Generate .d.ts files
        "declarationMap": true, // Generate sourcemaps for .d.ts files
        "sourceMap": true, // Generate .js.map files

        /* Output Settings */
        "outDir": "./dist", // Specify output directory
        "rootDir": "./src", // Specify root directory of source files
        "noEmit": false, // Override base config to allow emitting files

        /* Module settings specific to this package if needed */
        // "module": "ESNext", // Already in base
        // "moduleResolution": "Bundler", // Already in base
        "baseUrl": "." // Ensure baseUrl is set for potential internal paths
    },
    "include": ["src/**/*.ts"], // Include all TS files in the src directory
    "exclude": ["node_modules", "dist"] // Exclude node_modules and the output directory
}
